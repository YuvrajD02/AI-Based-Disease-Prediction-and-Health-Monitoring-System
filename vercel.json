{
    "version": 2,
    "name": "healthcheck-ai",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "backend/disease_model/mock_model_server.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/model/(.*)",
            "dest": "/backend/disease_model/mock_model_server.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}